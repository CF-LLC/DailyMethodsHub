# App Configuration
NEXT_PUBLIC_APP_NAME="Daily Methods Hub"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Supabase Configuration
# Get these from: https://supabase.com/dashboard → Your Project → Settings → API
# You can use either the new API keys (recommended) or legacy JWT keys
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"  # Can be sb_publishable_... (new) or eyJhbG... (legacy JWT)
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"  # Can be sb_secret_... (new) or eyJhbG... (legacy JWT)

# Stripe Configuration
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."  # From Stripe webhook settings
STRIPE_PRICE_ID="price_..."  # Premium subscription price ID

# Cron Job Security
# Generate a random secret for securing cron endpoints
CRON_SECRET="your-random-secret-key"  # Used to authenticate cron job requests

